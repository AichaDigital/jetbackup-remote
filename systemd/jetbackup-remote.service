[Unit]
Description=JetBackup Remote Orchestrator
Documentation=https://github.com/AichaDigital/jetbackup-remote
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
Environment=PYTHONPATH=/opt/jetbackup-remote/src
ExecStart=/usr/bin/python3 -m jetbackup_remote -c /etc/jetbackup-remote/config.json run
User=root
Group=root

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=jetbackup-remote

# Security hardening (ProtectHome disabled: needs /root/.ssh for SSH keys)
ProtectSystem=strict
ReadWritePaths=/var/log /tmp /etc/jetbackup-remote
PrivateTmp=true
NoNewPrivileges=true
ProtectKernelModules=true
ProtectKernelTunables=true

[Install]
WantedBy=multi-user.target
